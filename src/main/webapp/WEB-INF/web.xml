<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- ✅ ProductServlet: initializes catalog and routes to index.jsp -->
  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>com.ilp.store.ProductServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/store</url-pattern>
  </servlet-mapping>

  <!-- ✅ AppServlet: handles cart actions -->
  <servlet>
    <servlet-name>AppServlet</servlet-name>
    <servlet-class>com.ilp.store.AppServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AppServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <!-- ✅ Welcome file: redirect to /store instead of opening index.jsp directly -->
  <welcome-file-list>
    <welcome-file>redirect.jsp</welcome-file>
  </welcome-file-list>

</web-app>

